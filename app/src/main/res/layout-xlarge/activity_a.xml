<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="ccom.example.isaturina.training.ActivityA" >

    <fragment
        android:id="@+id/fragment_one"
        android:name="com.example.isaturina.training.FragmentOne"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_one" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="ccom.example.isaturina.training.ActivityA" >

        <fragment
            android:id="@+id/fragment_two"
            android:name="com.example.isaturina.training.FragmentTwo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <fragment
            android:id="@+id/fragment_three"
            android:name="com.example.isaturina.training.FragmentThree"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
